<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.4" method="upgrade">
	<name>Skroutz Easy</name>

	<!-- Name of the Author -->
	<author>Skroutz.gr</author>

	<!-- Author's email address -->
	<authorEmail>dev@skroutz.gr</authorEmail>

	<!-- Author's website -->
	<authorUrl>http://www.skroutz.gr</authorUrl>

	<!-- Description of what the component does -->
	<description>Faster checkouts with Skroutz Easy</description>

	<!-- Component version number, recorded in the components table -->
	<version>1.1.3</version>

	<!-- Version Date of the Component -->
	<!-- Original creation date. Recommended: YYYY-MM-DD -->
	<creationDate>April 2015</creationDate>

	<!-- Copyright information -->
	<copyright>Copyright (c) 2012 Skroutz.gr. All rights reserved.</copyright>

	<!-- License information -->
	<license>MIT - http://www.opensource.org/licenses/MIT</license>

	<config>
		<fields name="params">
			<fieldset name="options">
				<field name="client_id" type="text" default="" label="COM_SKROUTZEASY_CLIENT_ID_LABEL" description="COM_SKROUTZEASY_CLIENT_ID_DESC" />
				<field name="client_secret" type="text" default="" label="COM_SKROUTZEASY_CLIENT_SECRET_LABEL" description="COM_SKROUTZEASY_CLIENT_SECRET_DESC" />
				<field name="redirect_uri" type="text" default="" label="COM_SKROUTZEASY_REDIRECT_URI_LABEL" description="COM_SKROUTZEASY_REDIRECT_URI_DESC" />

				<field name="company_field" type="text" default="company" label="COM_SKROUTZEASY_COMPANY_LABEL" description="COM_SKROUTZEASY_COMPANY_DESC" />
				<field name="profession_field" type="text" default="profession" label="COM_SKROUTZEASY_PROFESSION_LABEL" description="COM_SKROUTZEASY_PROFESSION_DESC" />
				<field name="afm_field" type="text" default="afm" label="COM_SKROUTZEASY_AFM_LABEL" description="COM_SKROUTZEASY_AFM_DESC" />
				<field name="doy_field" type="text" default="doy" label="COM_SKROUTZEASY_DOY_LABEL" description="COM_SKROUTZEASY_DOY_DESC" />
				<field name="company_phone_field" type="text" default="company_phone" label="COM_SKROUTZEASY_COMPANY_PHONE_LABEL" description="COM_SKROUTZEASY_COMPANY_PHONE_DESC" />
				<field name="invoice_type_field" type="text" default="invoice_type" label="COM_SKROUTZEASY_INVOICE_TYPE_LABEL" description="COM_SKROUTZEASY_INVOICE_TYPE_DESC" />
				<field name="invoice_type_retail_value" type="text" default="Retail" label="COM_SKROUTZEASY_INVOICE_TYPE_RETAIL_VALUE_LABEL" description="COM_SKROUTZEASY_INVOICE_TYPE_RETAIL_VALUE_DESC" />
				<field name="invoice_type_invoice_value" type="text" default="Invoice" label="COM_SKROUTZEASY_INVOICE_TYPE_INVOICE_VALUE_LABEL" description="COM_SKROUTZEASY_INVOICE_TYPE_INVOICE_VALUE_DESC" />

				<field name="site" type="text" default="https://www.skroutz.gr" label="COM_SKROUTZEASY_SITE_LABEL" description="COM_SKROUTZEASY_SITE_DESC" />
				<field name="authorization_url" type="text" default="/oauth2/authorizations/new" label="COM_SKROUTZEASY_AUTHORIZATION_URL_LABEL" description="COM_SKROUTZEASY_AUTHORIZATION_URL_DESC" />
				<field name="token_url" type="text" default="/oauth2/token" label="COM_SKROUTZEASY_TOKEN_URL_LABEL" description="COM_SKROUTZEASY_TOKEN_URL_DESC" />
				<field name="address_url" type="text" default="/oauth2/address" label="COM_SKROUTZEASY_ADDRESS_URL_LABEL" description="COM_SKROUTZEASY_ADDRESS_URL_DESC" />
			</fieldset>
		</fields>
	</config>

	<!-- Listing of all files that should be installed for the component to function -->
	<files folder="site">
		<filename>controller.php</filename>
		<filename>skroutzeasy.php</filename>
		<filename>string_filter.php</filename>
		<filename>index.html</filename>
		<folder>views</folder>
	</files>

	<administration>
		<!-- Administration Menu Section -->
		<menu>COM_SKROUTZEASY_MENU</menu>

		<!-- Language files -->
		<languages folder="admin/language">
			<language tag="en-GB">en-GB/en-GB.com_skroutzeasy.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_skroutzeasy.sys.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_skroutzeasy.menu.ini</language>
			<language tag="el-GR">el-GR/el-GR.com_skroutzeasy.ini</language>
			<language tag="el-GR">el-GR/el-GR.com_skroutzeasy.sys.ini</language>
			<language tag="el-GR">el-GR/el-GR.com_skroutzeasy.menu.ini</language>
		</languages>

		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>skroutzeasy.php</filename>
			<folder>views</folder>
		</files>
	</administration>
</extension>
